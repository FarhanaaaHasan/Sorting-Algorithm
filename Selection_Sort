//SELECTION SORT
__________________

#include<bits/stdc++.h>
using namespace std;

void printArray(int arr[], int len) {
    for (int i = 0; i < len; i++)
        cout << arr[i] << " ";
    cout << endl;
}

void SelectionSort(int arr[], int len) {
    for (int i = 0; i < len - 1; i++) {
        int minIndex = i;
        for (int j = i + 1; j < len; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }
        int temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;
    }
}

int main() {
    int arr[] = {22, 32, 6, -2, 2, 3, 9, 10};
    int len = sizeof(arr) / sizeof(arr[0]);
    cout << "Given  Array : ";
    printArray(arr, len);

    SelectionSort(arr, len);

    cout << "Sorted Array : ";
    printArray(arr, len);

    return 0;
}

